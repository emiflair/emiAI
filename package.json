{
  "name": "emiai-chatbot",
  "version": "1.0.0",
  "description": "A modern, responsive AI chatbot with beautiful themes and voice capabilities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "docker:build": "docker build -t emiai-chatbot .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/config.js:/app/config.js:ro emiai-chatbot",
    "docker:up": "docker-compose up",
    "docker:up:build": "docker-compose up --build",
    "docker:up:d": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ai",
    "chatbot",
    "openai",
    "chat",
    "assistant",
    "voice",
    "responsive",
    "modern"
  ],
  "author": "emiflair",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emiflair/emiAI.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "openai": "^5.20.1"
  }
}
